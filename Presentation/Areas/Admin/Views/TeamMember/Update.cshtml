@using Business.ViewModels.TeamMember
@model TeamMemberUpdateVM

<form enctype="multipart/form-data" method="post" asp-action="Update" asp-controller="TeamMember">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="form-label"></label>
        <input asp-for="Surname" class="form-control" placeholder="Enter surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" placeholder="Enter position" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Photo" class="form-label"></label>
        <input asp-for="Photo" class="form-control" placeholder="Select Photo" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <br/>
    <div>
        <img class="w-25" src="~/assets/img/@Model.PhotoName" alt="Alternate Text" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update</button>
    <a asp-action="Index" asp-controller="TeamMember" class="btn btn-danger mt-3">Back</a>
</form>